// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Timesheet {
  id         String   @id @default(uuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  date       String
  time       String
  isEnter    Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employeeId String
}

model Employee {
  id        String      @id @default(uuid())
  cardId    String
  name      String
  group     Group       @relation(fields: [groupId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Timesheet Timesheet[]
  groupId   String
}

model Group {
  id        String     @id @default(uuid())
  name      String
  startTime String
  endTime   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Employee  Employee[]
  Break     Break[]
}

model Break {
  id        String   @id @default(uuid())
  startTime String
  endTime   String
  group     Group    @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groupId   String
}

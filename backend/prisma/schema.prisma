// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Timesheet {
  id         String   @id @default(uuid())
  date       String
  time       String
  isEnter    Boolean
  employeeId String
  groupId    String
  employee   Employee @relation(fields: [employeeId], references: [id])
  group      Group    @relation(fields: [groupId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Employee {
  id          String      @id @default(uuid())
  cardId      String
  name        String
  currGroupId String
  currGroup   Group       @relation(fields: [currGroupId], references: [id])
  Timesheet   Timesheet[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  WorkShift   WorkShift[]
}

model Group {
  id          String        @id @default(uuid())
  name        String
  isConstant  Boolean
  Employee    Employee[]
  Timesheet   Timesheet[]
  SubGroup    Subgroup[]
  WeekDayWork WeekDayWork[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Subgroup {
  id        String      @id @default(uuid())
  startTime String
  endTime   String
  group     Group       @relation(fields: [groupId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  groupId   String
  WorkShift WorkShift[]
  Break     Break[]
}

model WorkShift {
  id         String   @id @default(uuid())
  date       String?
  subgroup   Subgroup @relation(fields: [subgroupId], references: [id], onDelete: Cascade)
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  subgroupId String
  employeeId String

  @@unique([employeeId, date])
}

model Break {
  id         String   @id @default(uuid())
  startTime  String
  endTime    String
  subgroup   Subgroup @relation(fields: [subgroupId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  subgroupId String
}

model WeekDayWork {
  id        String   @id @default(uuid())
  value     Int
  groups    Group[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
